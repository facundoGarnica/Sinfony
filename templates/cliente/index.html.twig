{% extends 'base.html.twig' %}

{% block title %}Cliente index{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('Css/StyleFormularios.css') }}">
    <h1>Consulta clientes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Mail</th>
                <th>Direccion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.id }}</td>
                <td>{{ cliente.Nombre }}</td>
                <td>{{ cliente.Mail }}</td>
                <td>{{ cliente.Direccion }}</td>
                <td>
                    <a href="{{ path('app_cliente_show', {'id': cliente.id}) }}">show</a>
                    <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href="{{ path('app_cliente_new') }}">Create new</a> #} 
    <a href="{{ path('app_menu') }}" class ="VolverMenu"> Volver al menu</a>
{% endblock %}
